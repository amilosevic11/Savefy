<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authenticationFragment">

    <fragment
        android:id="@+id/authenticationFragment"
        android:name="com.rma.savefy.ui.authentication.AuthenticationFragment"
        android:label="AuthenticationFragment">
        <action
            android:id="@+id/action_authenticationFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:enterAnim="@android:anim/slide_in_left"/>
        <action
            android:id="@+id/action_authenticationFragment_to_revenuesAndExpensesFragment"
            app:destination="@id/revenuesAndExpensesFragment"
            app:popUpTo="@id/authenticationFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@android:anim/slide_in_left"/>
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.rma.savefy.ui.registration.RegistrationFragment"
        android:label="RegistrationFragment">
    </fragment>

    <fragment
        android:id="@+id/revenuesAndExpensesFragment"
        android:name="com.rma.savefy.ui.revenuesandexpenses.RevenuesAndExpensesFragment"
        android:label="RevenuesAndExpensesFragment">
        <action
            android:id="@+id/action_revenuesAndExpensesFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment"
            app:enterAnim="@android:anim/slide_out_right"/>
    </fragment>

</navigation>